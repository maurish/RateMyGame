<header class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container">

    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "Rate My Game", :root , :class => "navbar-brand"%>
    </div><!-- /.navbar-header-->

    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <%= nav_link "Publishers", publishers_path  %>
        <%= nav_link "Games",      games_path       %>
        <%= nav_link "Ratings",    ratings_path     %>
        <%= nav_link "Users",      users_path       %>
      </ul>

      <% if not signed_in? %>
        <%= form_for @session, url: {controller: :sessions, action: :create}, html:{:class => "navbar-form navbar-right"} do |f| %>
          <div class="form-group">
            <%= f.text_field :name, placeholder:"Username"%>
          </div>
          <div class="form-group">
            <%= f.password_field :password, placeholder:"Password" %>
          </div>
          <%= f.submit "Sign in", :class=> "sign_in" %>
        
        <% end %><!-- /form -->
      <% else %> <!-- if signed-->
        <div class="nav navbar-nav navbar-right">
          <%#= content_tag :button, "Logout" , :class => "btn btn-default navbar-btn" , type:"button" %>
          <%= nav_link "Logout", controller: :sessions, action: :destroy%>
          <%= nav_link current_user %>
        </div>
      <% end %>
    </div><!--/.navbar-collapse -->
  </div>
</header>
  