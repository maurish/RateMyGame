<h1>Listing games</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Publisher</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <td><%= game.publisher.name %></td>
        <td><%= button 'Show', game %></td>
        <td><%= button 'Edit', edit_game_path(game), :class=>"btn btn-warning" %></td>
        <td><%= link_to 'Destroy', game, :class=>"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= button "New Game", new_game_path, :class=>"btn btn-primary" %>
