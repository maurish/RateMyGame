<h1>Listing publishers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Year</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @publishers.each do |publisher| %>
      <tr>
        <td><%= publisher.name %></td>
        <td><%= publisher.year %></td>
        <td><%= button 'Show', publisher %></td>
        <td><%= button 'Edit', edit_publisher_path(publisher) , :class=>"btn btn-warning"%></td>
        <td><%= button 'Destroy', publisher,:class=>"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button 'New Publisher', new_publisher_path , :class=>"btn btn-primary"%>
