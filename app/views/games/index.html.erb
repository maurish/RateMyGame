<h1>Listing games</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Publisher</th>
      <th>Year</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= link_to game.name, game %></td>
        <td><%= link_to game.publisher.name , game.publisher%></td>
        <td><%= game.year%>
        <td><%= link_to 'Edit', edit_game_path(game), :class=>"edit" %></td>
        <td><%= link_to 'Destroy', game, :class=>"destroy", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= button "New Game", new_game_path, :class=>"new" %>
